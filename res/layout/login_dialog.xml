<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:weightSum="1"
  android:minWidth="300dp" android:layout_height="match_parent">
  	<ScrollView android:layout_height="match_parent" android:id="@+id/scrollView1" android:layout_width="match_parent">
    <LinearLayout android:id="@+id/linearLayout2" android:orientation="vertical"
  android:layout_width="fill_parent"
  android:weightSum="1"
  android:minWidth="300dp" android:layout_height="match_parent">
			
			<RelativeLayout
        android:id="@+id/colorDiv"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/triangleBackground"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.edlplan.ui.TriangleEffectView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </RelativeLayout>
    
    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/register_error_text" android:textColor="#FF0000"></TextView>
    <requestFocus></requestFocus>
    </EditText>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textPersonName" android:id="@+id/usernamelogin" android:hint="@string/hint_usernamelogin"></EditText>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textPassword" android:id="@+id/passwordlogin" android:hint="@string/hint_password"></EditText>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:weightSum="1" android:baselineAligned="false">
        <Button android:id="@+id/login_btn" android:layout_width="wrap_content" android:text="@string/dialog_login" android:layout_gravity="right" android:layout_weight="0.60" android:layout_height="wrap_content"></Button>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/logincancel_btn" android:text="@string/dialog_cancel" android:layout_gravity="left" android:layout_weight="0.40"></Button>
	    
	    </LinearLayout>
	    
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
